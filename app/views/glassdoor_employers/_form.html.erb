<%= form_tag(search_path, method: :get, id: "search-form") do %>
    <div class="form-group">
      <%= label_tag(:name, "Find Company Name") %>
      <%= text_field_tag(:name, params[:name], class: 'form-control', autofocus: true, placeholder: "Company Name") %>
    </div>
    <div class="form-group">
      <%= submit_tag("Search", class: 'btn btn-success') %>
    </div>
<% end %>

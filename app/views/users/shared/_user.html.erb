<div class="row">
  <div class="small-8 small-offset-2 columns">
    <h3>Hi, <%= @user.username.split(" ").first %>!</h3>
  </div>
</div>

<%= form_for(@user, url: registration_path(@user), html: { method: :put }) do |f| %>
<div class="row">
  <div class="small-8 small-offset-2 columns">
    <%= devise_error_messages! %>
  </div>
</div>

<div class="row">
  <div class="small-8 small-offset-2 columns">
    <div class="field">
      <%= f.label :username %>
      <%= f.text_field :username, autofocus: true %>
    </div>
  </div>
</div>

<div class="row">
  <div class="small-8 small-offset-2 columns">
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>
    <% if devise_mapping.confirmable? && @user.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= @user.unconfirmed_email %></div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="small-8 small-offset-2 columns">
    <div class="field">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
      <%= f.password_field :password, autocomplete: "off" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>
  </div>
</div>

<div class="row">
  <div class="small-8 small-offset-2 columns">
    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>
  </div>
</div>

<div class="row">
  <div class="small-8 small-offset-2 columns">
    <div class="field">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i>
      <%= f.password_field :current_password, autocomplete: "off" %>
    </div>
  </div>
</div>

<div class="row">
  <div class="small-8 small-offset-2 columns">
    <div class="actions">
      <%= f.submit "Update", :class => 'info button expanded' %>
    </div>
  </div>
  <% end %>
</div>

<div class="row">
  <div class="small-8 small-offset-2 columns">
    <h4>Cancel my account</h4>
  </div>
</div>

<div class="row">
  <div class="small-8 small-offset-2 columns">
    <%= button_to "Cancel my account", registration_path(@user), data: { confirm: "Are you sure?" }, method: :delete, class: 'alert button tiny' %>
  </div>
</div>
